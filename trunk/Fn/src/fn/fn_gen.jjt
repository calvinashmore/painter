/*
 * Program structuring syntax follows.
 */

void CompilationUnit():
{}
{
  [ PackageDeclaration() ]
  ( ImportDeclaration() )*
  ( TypeDeclaration() )*
  <EOF>
}

void PackageDeclaration():
{}
{
  "package" Name() ";"
}

